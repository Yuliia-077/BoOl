@page
@model BoOl.Pages.CustomServices.CreateModel

@{
    ViewData["Title"] = "Create Custom Service";
}

<div class="container">
    <div class="card border-dark ml-5 mr-5">
        <div class="card-header">
            <h2 class="text-center">Додати послугу до замовлення №@Html.DisplayFor(modelItem => Model.CustomService.OrderId)</h2>
            </div>
            <form method="post">
                <div class="card-body">
                    <div class="d-flex justify-content-end">
                        <input type="reset" class="btn btn-outline-warning" value="Очистити все" />
                    </div>
                    <input asp-for="CustomService.OrderId" hidden />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group row d-flex justify-content-center">
                        <label asp-for="CustomService.ServiceId" class="control-label col-md-2">Послуга*</label>
                        <div class="input-group col-md-5">
                            <select asp-for="CustomService.ServiceId" class="form-control" asp-items="ViewBag.ServiceId" id="ServiceId" aria-describedby="button-addon1"></select>
                            <button class="btn btn-outline-secondary" type="button" id="button-addon1" onclick="document.getElementById('ServiceId').value = ''">X</button>
                        </div>
                        <div class="col-md-2"><span asp-validation-for="CustomService.ServiceId" class="text-danger"></span></div>
                    </div>
                    <div class="form-group row d-flex justify-content-center">
                        <label asp-for="CustomService.ExecutionDate" class="control-label col-md-2">Дата прийому*</label>
                        <div class="input-group col-md-5">
                            <input asp-for="CustomService.ExecutionDate" type="date" class="form-control" id="Date" aria-describedby="button-addon1" />
                            <button class="btn btn-outline-secondary" type="button" id="button-addon1" onclick="document.getElementById('Date').value = ''">X</button>
                        </div>
                        <div class="col-md-2"><span asp-validation-for="CustomService.ExecutionDate" class="text-danger"></span></div>
                    </div>
                    <div class="form-group row d-flex justify-content-center">
                        <label asp-for="CustomService.IsDone" class="control-label col-md-2">Зроблено</label>
                        <div class="input-group col-md-5">
                            <input asp-for="CustomService.IsDone"/>
                        </div>
                        <div class="col-md-2"></div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-end">
                        <input type="submit" value="Зберегти" class="btn btn-outline-success mr-1" />
                        <a class="btn btn-outline-secondary" asp-page="/Orders/Details" asp-route-id="@Model.CustomService.OrderId">Скасувати</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
