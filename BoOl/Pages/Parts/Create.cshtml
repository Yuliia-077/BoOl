@page
@model BoOl.Pages.Parts.CreateModel


@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="card border-dark">
        <div class="card-header">
            <h2 class="text-center">Додати запчастину</h2>
        </div>
        <form method="post">
            <div class="card-body">
                <div class="d-flex justify-content-end">
                    <input type="reset" class="btn btn-outline-warning" value="Очистити все" />
                </div>
                <input asp-for="Part.CustomServiceId" hidden />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row d-flex justify-content-center">
                    <label asp-for="Part.SerialNumber" class="control-label col-md-2">Серійний номер*</label>
                    <div class="input-group col-md-5">
                        <input asp-for="Part.SerialNumber" class="form-control" id="SerialNumber" aria-describedby="button-addon1" />
                        <button class="btn btn-outline-secondary" type="button" id="button-addon1" onclick="document.getElementById('SerialNumber').value = ''">X</button>
                    </div>
                    <div class="col-md-2"><span asp-validation-for="Part.SerialNumber" class="text-danger"></span></div>
                </div>
                <div class="form-group row d-flex justify-content-center">
                    <label asp-for="Part.StorageId" class="control-label col-md-2">Постачання*</label>
                    <div class="input-group col-md-5">
                        <select asp-for="Part.StorageId" asp-items="ViewBag.StorageId" class="form-control" aria-describedby="button-addon2" id="Storage"></select>
                        <button class="btn btn-outline-secondary" type="button" id="button-addon2" onclick="document.getElementById('Storage').value = ''">X</button>
                    </div>
                    <div class="col-md-2"><span asp-validation-for="Part.StorageId" class="text-danger"></span></div>
                </div>
                <div class="form-group row d-flex justify-content-center">
                    <label asp-for="Part.IsInjured" class="control-label col-md-2">Пошкоджений</label>
                    <div class="input-group col-md-5">
                        <input asp-for="Part.IsInjured" id="Inf" aria-describedby="button-addon3" />
                    </div>
                    <div class="col-md-2"><span asp-validation-for="Part.IsInjured" class="text-danger"></span></div>
                </div>
            </div>
            <div class="card-footer">
                <div class="d-flex justify-content-end">
                    <input type="submit" value="Зберегти" class="btn btn-outline-success mr-1" />
                    <a class="btn btn-outline-secondary" asp-page="/CustomServices/Details" asp-route-id="@Model.Part.CustomServiceId">Скасувати</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
