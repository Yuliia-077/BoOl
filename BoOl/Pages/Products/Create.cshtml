@page
@model BoOl.Pages.Products.CreateModel


@{
    ViewData["Title"] = "Create";
}

<div class="container">
<div class="card border-dark">
    <div class="card-header">
        <h2 class="text-center">Додати техніку</h2>
        <h5 class="text-center">Власник: @Html.DisplayFor(modelItem => Model.Product.Customer.LastName) @Html.DisplayFor(modelItem => Model.Product.Customer.FirstName)</h5>
    </div>
    <form method="post">
        <div class="card-body">
            <div class="d-flex justify-content-end">
                <input type="reset" class="btn btn-outline-warning" value="Очистити все" />
            </div>
                <input asp-for="Product.CustomerId" hidden />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row d-flex justify-content-center">
                    <label asp-for="Product.SerialNumber" class="control-label col-md-3">Серійний номер*</label>
                    <div class="input-group col-md-5">
                        <input asp-for="Product.SerialNumber" class="form-control" id="SerialNumber" aria-describedby="button-addon1" />
                        <button class="btn btn-outline-secondary" type="button" id="button-addon1" onclick="document.getElementById('SerialNumber').value = ''">X</button>
                    </div>
                    <div class="col-md-3"><span asp-validation-for="Product.SerialNumber" class="text-danger"></span></div>
                </div>
                <div class="form-group row d-flex justify-content-center">
                    <label asp-for="Product.ModelId" class="control-label col-md-3">Модель*</label>
                    <div class="input-group col-md-5">
                        <select asp-for="Product.ModelId" asp-items="ViewBag.ModelId" class="form-control" aria-describedby="button-addon2" id="Model"></select>
                        <button class="btn btn-outline-secondary" type="button" id="button-addon2" onclick="document.getElementById('Model').value = ''">X</button>
                    </div>
                    <div class="col-md-3"><span asp-validation-for="Product.ModelId" class="text-danger"></span></div>
                </div>
                <div class="form-group row d-flex justify-content-center">
                    <label asp-for="Product.AdditionalInf" class="control-label col-md-3">Додаткова інформація</label>
                    <div class="input-group col-md-5">
                        <input asp-for="Product.AdditionalInf" class="form-control" id="Inf" aria-describedby="button-addon3" />
                        <button class="btn btn-outline-secondary" type="button" id="button-addon3" onclick="document.getElementById('Inf').value = ''">X</button>
                    </div>
                    <div class="col-md-3"><span asp-validation-for="Product.AdditionalInf" class="text-danger"></span></div>
                </div>
        </div>
        <div class="card-footer">
            <div class="d-flex justify-content-end">
                <input type="submit" value="Зберегти" class="btn btn-outline-success mr-1" />
                <a class="btn btn-outline-secondary" asp-page="/Customers/Details" asp-route-id="@Model.Product.Customer.Id">Скасувати</a>
            </div>
        </div>
    </form>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
