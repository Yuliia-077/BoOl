@page
@model BoOl.Pages.CustomServices.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>CustomService</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CustomService.Id" />
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="CustomService.IsDone" /> @Html.DisplayNameFor(model => model.CustomService.IsDone)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="CustomService.Price" class="control-label"></label>
                <input asp-for="CustomService.Price" class="form-control" />
                <span asp-validation-for="CustomService.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomService.ExecutionDate" class="control-label"></label>
                <input asp-for="CustomService.ExecutionDate" class="form-control" />
                <span asp-validation-for="CustomService.ExecutionDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomService.WorkerId" class="control-label"></label>
                <select asp-for="CustomService.WorkerId" class="form-control" asp-items="ViewBag.WorkerId"></select>
                <span asp-validation-for="CustomService.WorkerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomService.PartId" class="control-label"></label>
                <select asp-for="CustomService.PartId" class="form-control" asp-items="ViewBag.PartId"></select>
                <span asp-validation-for="CustomService.PartId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomService.ServiceId" class="control-label"></label>
                <select asp-for="CustomService.ServiceId" class="form-control" asp-items="ViewBag.ServiceId"></select>
                <span asp-validation-for="CustomService.ServiceId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomService.OrderId" class="control-label"></label>
                <select asp-for="CustomService.OrderId" class="form-control" asp-items="ViewBag.OrderId"></select>
                <span asp-validation-for="CustomService.OrderId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
