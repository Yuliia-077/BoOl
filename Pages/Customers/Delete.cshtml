@page
@model BoOl.Pages.Customers.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h4 class="text-center">Ви дійсно хочете видалити даного клієнта?</h4>
<hr />
<div class="row">
    <div class="col-1">
        <a asp-page="./Details" asp-route-id="@Model.Customer.Id"><i class="fas fa-arrow-left"></i></a>
    </div>
    <div class="col-11">
        <dl class="row">
            <dt class="col-5 text-right">
                ПІБ:
            </dt>
            <dd class="col-7">
                @Html.DisplayFor(model => model.Customer.LastName)  @Html.DisplayFor(model => model.Customer.FirstName)  @Html.DisplayFor(model => model.Customer.MiddleName)
            </dd>
            <dt class="col-5 text-right">
                Номер телефону:
            </dt>
            <dd class="col-7">
                @Html.DisplayFor(model => model.Customer.PhoneNumber)
            </dd>
            <dt class="col-5 text-right">
                Електронна пошта:
            </dt>
            <dd class="col-7">
                @Html.DisplayFor(model => model.Customer.Email)
            </dd>
            <dt class="col-5 text-right">
                Дата народження:
            </dt>
            <dd class="col-7">
                @Html.DisplayFor(model => model.Customer.DateOfBirth))
            </dd>
            <dt class="col-5 text-right">
                Адреса:
            </dt>
            <dd class="col-7">
                @Html.DisplayFor(model => model.Customer.Address)
            </dd>
            <dt class="col-5 text-right">
                Знижка:
            </dt>
            <dd class="col-7">
                @Html.DisplayFor(model => model.Customer.Discount)
            </dd>
        </dl>
        <form method="post" class="text-center">
            <input type="hidden" asp-for="Customer.Id" />
            <input type="submit" value="Видалити" class="btn btn-danger" />
        </form>
    </div>
</div>
