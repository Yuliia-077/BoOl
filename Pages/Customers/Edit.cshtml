@page
@model BoOl.Pages.Customers.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h4 class="text-center">Змінити клієнта @Html.DisplayFor(model => model.Customer.LastName) @Html.DisplayFor(model => model.Customer.FirstName)</h4>
<hr />

<div class="row">
    <div class="col-sm-1">
        <a asp-page="./Details" asp-route-id="@Model.Customer.Id"><i class="fas fa-arrow-left"></i></a>
    </div>
    <div class="col-sm-11">
        <form method="post">
            <div class="form-row">
                <input type="hidden" asp-for="Customer.Id" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group col-sm-6">
                    <label asp-for="Customer.LastName" class="control-label">Прізвище *</label>
                    <div class="form-inline">
                        <input asp-for="Customer.LastName" class="form-control col-10" />
                        <input type="reset" class="btn-light form-control col-1" value="X" />
                    </div>
                    <span asp-validation-for="Customer.LastName" class="text-danger"></span>
                </div>
                <div class="form-group col-sm-6">
                    <label asp-for="Customer.PhoneNumber" class="control-label">Номер телефону *</label>
                    <div class="form-inline">
                        <input asp-for="Customer.PhoneNumber" class="form-control col-10" />
                        <input type="reset" class="btn-light form-control col-1" value="X" />
                    </div>
                    <span asp-validation-for="Customer.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group col-sm-6">
                    <label asp-for="Customer.FirstName" class="control-label">Ім'я *</label>
                    <div class="form-inline">
                        <input asp-for="Customer.FirstName" class="form-control col-10" />
                        <input type="reset" class="btn-light form-control col-1" value="X" />
                    </div>
                    <span asp-validation-for="Customer.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group col-sm-6">
                    <label asp-for="Customer.DateOfBirth" class="control-label">Дата народження *</label>
                    <div class="form-inline">
                        <input type= "date" asp-for="Customer.DateOfBirth" class="form-control col-10" />
                        <input type="reset" class="btn-light form-control col-1" value="X" />
                    </div>
                    <span asp-validation-for="Customer.DateOfBirth" class="text-danger"></span>
                </div>
                <div class="form-group col-sm-6">
                    <label asp-for="Customer.MiddleName" class="control-label">По-батькові *</label>
                    <div class="form-inline">
                        <input asp-for="Customer.MiddleName" class="form-control col-10" />
                        <input type="reset" class="btn-light form-control col-1" value="X" />
                    </div>
                    <span asp-validation-for="Customer.MiddleName" class="text-danger"></span>
                </div>
                <div class="form-group col-sm-6">
                    <label asp-for="Customer.Discount" class="control-label">Знижка</label>
                    <div class="form-inline">
                        <input asp-for="Customer.Discount" class="form-control col-10" />
                        <input type="reset" class="btn-light form-control col-1" value="X" />
                    </div>
                    <span asp-validation-for="Customer.Discount" class="text-danger"></span>
                </div>
                <div class="form-group col-12">
                    <label asp-for="Customer.Email" class="control-label">Електронна пошта *</label>
                    <div class="form-inline">
                        <input asp-for="Customer.Email" class="form-control col-10" />
                        <input type="reset" class="btn-light form-control col-1" value="X" />
                    </div>
                    <span asp-validation-for="Customer.Email" class="text-danger"></span>
                </div>
                <div class="form-group col-12">
                    <label asp-for="Customer.Address" class="control-label">Адреса *</label>
                    <div class="form-inline">
                        <input asp-for="Customer.Address" class="form-control col-10" />
                        <input type="reset" class="btn-light form-control col-1" value="X" />
                    </div>
                    <span asp-validation-for="Customer.Address" class="text-danger"></span>
                </div>
                <div class="form-group col-12">
                    <input type="submit" value="Зберегти" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
