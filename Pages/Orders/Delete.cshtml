@page
@model BoOl.Pages.Orders.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h4 class="text-center">Ви дійсно хочете видалити дане замовлення?</h4>
<hr />
<div class="row">
    <div class="col-1">
        <a asp-page="./Details" asp-route-id="@Model.?.Id"><i class="fas fa-arrow-left"></i></a>
    </div>
    <div class="col-11">
        <dl class="row">
            <dt class="col-6 text-right">
                Техніка:
            </dt>
            <dd class="col-6">
                @Html.DisplayFor(model => model.Order.Product.Model.Manufacturer) @Html.DisplayFor(model => model.Order.Product.Model.Type) @Html.DisplayFor(model => model.Order.Product.SerialNumber)
            </dd>

            <dt class="col-6 text-right">
                Оплачено:
            </dt>
            <dd class="col-6">
                @Html.DisplayFor(model => model.Order.Payment)
            </dd>

            <dt class="col-6 text-right">
                Статус:
            </dt>
            <dd class="col-6">
                @Html.DisplayFor(model => model.Order.Status)
            </dd>

            <dt class="col-6 text-right">
                Знижка:
            </dt>
            <dd class="col-6">
                @Html.DisplayFor(model => model.Order.Discount)
            </dd>

            <dt class="col-6 text-right">
                Дата прийому:
            </dt>
            <dd class="col-6">
                @Html.DisplayFor(model => model.Order.DateOfAdmission)
            </dd>

            <dt class="col-6 text-right">
                Дата видачі:
            </dt>
            <dd class="col-6">
                @Html.DisplayFor(model => model.Order.DateOfIssue)
            </dd>

            <dt class="col-6 text-right">
                Працівник:
            </dt>
            <dd class="col-6">
                @Html.DisplayFor(model => model.Order.Worker.LastName)
                @Html.DisplayFor(model => model.Order.Worker.FirstName)
            </dd>
        </dl>
        <form method="post" class="text-center">
            <input type="hidden" asp-for="Order.Id" />
            <input type="submit" value="Видалити" class="btn btn-danger" />
        </form>
    </div>
</div>