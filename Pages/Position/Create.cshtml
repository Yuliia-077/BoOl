@page
@model BoOl.Pages.Position.CreateModel

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <h4 class="col-10">Створити посаду</h4>
    <div class="col-2">
        <a asp-page="./Index"><i class="fas fa-arrow-left"></i></a>
    </div>
    <hr />
</div>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Position.Name" class="control-label">Посада</label>
                <input asp-for="Position.Name" class="form-control" />
                <span asp-validation-for="Position.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Position.Salary" class="control-label">Зарплата</label>
                <input asp-for="Position.Salary" class="form-control" />
                <span asp-validation-for="Position.Salary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Position.PercentageOfWork" class="control-label">Процент від роботи</label>
                <input asp-for="Position.PercentageOfWork" class="form-control" />
                <span asp-validation-for="Position.PercentageOfWork" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Зберегти" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
