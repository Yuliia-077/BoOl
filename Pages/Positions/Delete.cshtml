@page
@model BoOl.Pages.Positions.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h4 class="text-center">Ви дійсно хочете видалити дану посаду?</h4>
<hr />
<div class="row">
    <div class="col-1">
        <a asp-page="./Details" asp-route-id="@Model.Position.Id"><i class="fas fa-arrow-left"></i></a>
    </div>
    <div class="col-11">
        <dl class="row">
            <dt class="col-6 text-right">
                Посада:
            </dt>
            <dd class="col-6">
                @Html.DisplayFor(model => model.Position.Name)
            </dd>
            <dt class="col-6 text-right">
                Зарплата:
            </dt>
            <dd class="col-6">
                @Html.DisplayFor(model => model.Position.Salary)
            </dd>
            <dt class="col-6 text-right">
                Процент від роботи:
            </dt>
            <dd class="col-6">
                @Html.DisplayFor(model => model.Position.PercentageOfWork)
            </dd>
        </dl>
        <form method="post" class="text-center">
            <input type="hidden" asp-for="Position.Id" />
            <input type="submit" value="Видалити" class="btn btn-danger" />
        </form>
    </div>
</div>
