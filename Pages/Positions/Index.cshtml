@page 
@model BoOl.Pages.Position.IndexModel

@{
    ViewData["Title"] = "Positions";
}


<div class="row">
    <div class="col-11">
        <h1 class="text-center">Посади</h1>
    </div>
    <div class="col-1">
        <a asp-page="Create"><i class="fas fa-plus"></i></a>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                Посада
            </th>
            <th>
                Зарплата
            </th>
            <th>
                Процент від роботи
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Position) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PercentageOfWork)
            </td>
            <td>
                <a asp-page="./Details" asp-route-id="@item.Id"><i class="fas fa-info"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
