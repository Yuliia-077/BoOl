@page
@model BoOl.Pages.Services.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h4 class="text-center">Ви дійсно хочете видалити дану послугу?</h4>
<hr />
<div class="row">
    <div class="col-1">
        <a asp-page="./Details" asp-route-id="@Model.Service.Id"><i class="fas fa-arrow-left"></i></a>
    </div>
    <div class="col-11">
        <dl class="row">
            <dt class="col-6 text-right">
                Назва послуги:
            </dt>
            <dd class="col-6">
                @Html.DisplayFor(model => model.Service.Name)
            </dd>
            <dt class="col-6 text-right">
                Ціна:
            </dt>
            <dd class="col-6">
                @Html.DisplayFor(model => model.Service.Price)
            </dd>
        </dl>
        <form method="post" class="text-center">
            <input type="hidden" asp-for="Service.Id" />
            <input type="submit" value="Видалити" class="btn btn-danger" />
        </form>
    </div>
</div>