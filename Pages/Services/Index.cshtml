@page
@model BoOl.Pages.Services.IndexModel

@{
    ViewData["Title"] = "";
}


<div class="row">
    <div class="col-11">
        <h1 class="text-center">Послуги</h1>
    </div>
    <div class="col-1">
        <a asp-page="Create"><i class="fas fa-plus"></i></a>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                Назва послуги
            </th>
            <th>
                Ціна
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Service)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-page="./Details" asp-route-id="@item.Id"><i class="fas fa-info"></i></a>
            </td>
        </tr>
        }
    </tbody>
</table>
