@{
    ViewData["Title"] = "Delete";
}

<h4 class="text-center">Ви дійсно хочете видалити дану поставку?</h4>
<hr />
<div class="row">
    <div class="col-1">
        <a asp-page="./Details" asp-route-id="@Model.Storage.Id"><i class="fas fa-arrow-left"></i></a>
    </div>
    <div class="col-11">
        <dl class="row">
            <dt class="col-6 text-right">
                Назва:
            </dt>
            <dd class="col-6">
                @Html.DisplayFor(model => model.Storage.Name)
            </dd>
            <dt class="col-6 text-right">
                Виробник:
            </dt>
            <dd class="col-6">
                @Html.DisplayFor(model => model.Storage.Manufacturer)
            </dd>
            <dt class="col-6 text-right">
                Модель:
            </dt>
            <dd class="col-6">
                @Html.DisplayFor(model => model.Storage.Model.Manufacturer) @Html.DisplayFor(model => model.Storage.Model.Type)
            </dd>
            <dt class="col-6 text-right">
                Кількість:
            </dt>
            <dd class="col-6">
                @Html.DisplayFor(model => model.Storage.Quantity)
            </dd>
            <dt class="col-6 text-right">
                Закупівельна ціна:
            </dt>
            <dd class="col-6">
                @Html.DisplayFor(model => model.Storage.PurchasePrice)
            </dd>
            <dt class="col-6 text-right">
                Оптова ціна:
            </dt>
            <dd class="col-6">
                @Html.DisplayFor(model => model.Storage.WholesalePrice)
            </dd>
            <dt class="col-6 text-right">
                Роздрібна ціна:
            </dt>
            <dd class="col-6">
                @Html.DisplayFor(model => model.Storage.RetailPrice)
            </dd>
            <dt class="col-6 text-right">
                Співробітник:
            </dt>
            <dd class="col-6">
                @Html.DisplayFor(model => model.Storage.Worker.LastName) @Html.DisplayFor(model => model.Storage.Worker.FirstName)
            </dd>
            <dt class="col-6 text-right">
                Дата прибуття:
            </dt>
            <dd class="col-6">
                @Html.DisplayFor(model => model.Storage.DateOfArrival)
            </dd>
        </dl>
        <form method="post" class="text-center">
            <input type="hidden" asp-for="Storage.Id" />
            <input type="submit" value="Видалити" class="btn btn-danger" />
        </form>
    </div>
</div>