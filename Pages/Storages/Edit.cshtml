@page
@model BoOl.Pages.Storages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h4 class="text-center">Змінити</h4>
<hr />

<div class="row">
    <div class="col-sm-1">
        <a asp-page="./Details" asp-route-id="@Model.Storage.Id"><i class="fas fa-arrow-left"></i></a>
    </div>
    <div class="col-sm-11">
        <form method="post">
            <div class="form-row">
                <input type="hidden" asp-for="Storage.Id" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group col-sm-6">
                    <label asp-for="Storage.Name" class="control-label">Назва *</label>
                    <div class="form-inline">
                        <input asp-for="Storage.Name" class="form-control col-10" />
                        <input type="reset" class="btn-light form-control col-1" value="X" />
                    </div>
                    <span asp-validation-for="Storage.Name" class="text-danger"></span>
                </div>
                <div class="form-group col-sm-6">
                    <label asp-for="Storage.PurchasePrice" class="control-label">Закупівельна ціна *</label>
                    <div class="form-inline">
                        <input asp-for="Storage.PurchasePrice" class="form-control col-10" />
                        <input type="reset" class="btn-light form-control col-1" value="X" />
                    </div>
                    <span asp-validation-for="Storage.PurchasePrice" class="text-danger"></span>
                </div>
                <div class="form-group col-sm-6">
                    <label asp-for="Storage.Manufacturer" class="control-label">Виробник *</label>
                    <div class="form-inline">
                        <input asp-for="Storage.Manufacturer" class="form-control col-10" />
                        <input type="reset" class="btn-light form-control col-1" value="X" />
                    </div>
                    <span asp-validation-for="Storage.Manufacturer" class="text-danger"></span>
                </div>
                <div class="form-group col-sm-6">
                    <label asp-for="Storage.WholesalePrice" class="control-label">Оптова ціна *</label>
                    <div class="form-inline">
                        <input asp-for="Storage.WholesalePrice" class="form-control col-10" />
                        <input type="reset" class="btn-light form-control col-1" value="X" />
                    </div>
                    <span asp-validation-for="Storage.WholesalePrice" class="text-danger"></span>
                </div>
                <div class="form-group col-sm-6">
                    <label asp-for="Storage.Quantity" class="control-label">Кількість *</label>
                    <div class="form-inline">
                        <input asp-for="Storage.Quantity" class="form-control col-10" />
                        <input type="reset" class="btn-light form-control col-1" value="X" />
                    </div>
                    <span asp-validation-for="Storage.Quantity" class="text-danger"></span>
                </div>
                <div class="form-group col-sm-6">
                    <label asp-for="Storage.RetailPrice" class="control-label">Роздрібна ціна *</label>
                    <div class="form-inline">
                        <input asp-for="Storage.RetailPrice" class="form-control col-10" />
                        <input type="reset" class="btn-light form-control col-1" value="X" />
                    </div>
                    <span asp-validation-for="Storage.RetailPrice" class="text-danger"></span>
                </div>
                <div class="form-group col-sm-6">
                    <label asp-for="Storage.ModelId" class="control-label">Модель *</label>
                    <div class="form-inline">
                        <select asp-for="Storage.ModelId" class="form-control col-10" asp-items="ViewBag.ModelId"></select>
                        <input type="reset" class="btn-light form-control col-1" value="X" />
                    </div>
                    <span asp-validation-for="Storage.ModelId" class="text-danger"></span>
                </div>
                <div class="form-group col-sm-6">
                    <label asp-for="Storage.WorkerId" class="control-label">Співробітник *</label>
                    <div class="form-inline">
                        <select asp-for="Storage.WorkerId" class="form-control col-10" asp-items="ViewBag.WorkerId"></select>
                        <input type="reset" class="btn-light form-control col-1" value="X" />
                    </div>
                    <span asp-validation-for="Storage.WorkerId" class="text-danger"></span>
                </div>
                <div class="col-sm-3">

                </div>
                <div class="form-group col-sm-6">
                    <label asp-for="Storage.DateOfArrival" class="control-label">Дата прибуття *</label>
                    <div class="form-inline">
                        <input asp-for="Storage.DateOfArrival" class="form-control col-10" />
                        <input type="reset" class="btn-light form-control col-1" value="X" />
                    </div>
                    <span asp-validation-for="Storage.DateOfArrival" class="text-danger"></span>
                </div>
                <div class="col-sm-3">

                </div>
                <div class="form-group col-12">
                    <input type="submit" value="Зберегти" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
