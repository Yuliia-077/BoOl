@page
@model BoOl.Pages.Types.DetailsModel

@{
    ViewData["Title"] = @Html.DisplayFor(model => model.Model);
}

<h4 class="text-center">@Html.DisplayFor(model => model.Model.Manufacturer) @Html.DisplayFor(model => model.Model.Type)</h4>
<hr />
<div class="row">
    <div class="col-1">
        <a asp-page="./Index"><i class="fas fa-arrow-left"></i></a>
    </div>
    <div class="col-10">
        <dl class="row">
            <dt class="col-6 text-right">
                Виробник:
            </dt>
            <dd class="col-6">
                @Html.DisplayFor(model => model.Model.Manufacturer)
            </dd>
            <dt class="col-6 text-right">
                Модель:
            </dt>
            <dd class="col-6">
                @Html.DisplayFor(model => model.Model.Type)
            </dd>
        </dl>
    </div>
    <div class="col-1">
        <a asp-page="./Edit" asp-route-id="@Model.Model.Id"><i class="far fa-edit"></i></a>
        <a asp-page="./Delete" asp-route-id="@Model.Model.Id"><i class="far fa-trash-alt"></i></a>
    </div>
</div>
