@page
@model BoOl.Pages.Types.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h4 class="text-center">Змінити модель @Html.DisplayFor(model => model.Model.Manufacturer) @Html.DisplayFor(model => model.Model.Type)</h4>
<hr />

<div class="row">
    <div class="col-sm-1">
        <a asp-page="./Details" asp-route-id="@Model.Model.Id"><i class="fas fa-arrow-left"></i></a>
    </div>
    <div class="col-sm-11">
        <form method="post">
            <div class="form-row">
                <input type="hidden" asp-for="Model.Id" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group col-sm-6">
                    <label asp-for="Model.Manufacturer" class="control-label">Виробник *</label>
                    <div class="form-inline">
                        <input asp-for="Model.Manufacturer" class="form-control col-10" />
                        <input type="reset" class="btn-light form-control col-1" value="X" />
                    </div>
                    <span asp-validation-for="Model.Manufacturer" class="text-danger"></span>
                </div>
                <div class="form-group col-sm-6">
                    <label asp-for="Model.Type" class="control-label">Модель *</label>
                    <div class="form-inline">
                        <input asp-for="Model.Type" class="form-control col-10" />
                        <input type="reset" class="btn-light form-control col-1" value="X" />
                    </div>
                    <span asp-validation-for="Model.Type" class="text-danger"></span>
                </div>
                <div class="form-group col-12">
                    <input type="submit" value="Зберегти" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
