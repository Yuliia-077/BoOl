@page
@model BoOl.Pages.Workers.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h4 class="text-center">Створити працівника </h4>
<hr />

<div class="row">
    <div class="col-sm-1">
        <a asp-page="./Index"><i class="fas fa-arrow-left"></i></a>
    </div>
    <div class="col-sm-11">
        <form method="post">
            <div class="form-row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group col-sm-6">
                    <label asp-for="Worker.LastName" class="control-label">Прізвище *</label>
                    <div class="form-inline">
                        <input asp-for="Worker.LastName" class="form-control col-10" />
                        <input type="reset" class="btn-light form-control col-1" value="X" />
                    </div>
                    <span asp-validation-for="Worker.LastName" class="text-danger"></span>
                </div>
                <div class="form-group col-sm-6">
                    <label asp-for="Worker.PhoneNumber" class="control-label">Номер телефону *</label>
                    <div class="form-inline">
                        <input asp-for="Worker.PhoneNumber" class="form-control col-10" />
                        <input type="reset" class="btn-light form-control col-1" value="X" />
                    </div>
                    <span asp-validation-for="Worker.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group col-sm-6">
                    <label asp-for="Worker.FirstName" class="control-label">Ім'я *</label>
                    <div class="form-inline">
                        <input asp-for="Worker.FirstName" class="form-control col-10" />
                        <input type="reset" class="btn-light form-control col-1" value="X" />
                    </div>
                    <span asp-validation-for="Worker.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group col-sm-6">
                    <label asp-for="Worker.Education" class="control-label">Освіта *</label>
                    <div class="form-inline">
                        <input asp-for="Worker.Education" class="form-control col-10" />
                        <input type="reset" class="btn-light form-control col-1" value="X" />
                    </div>
                    <span asp-validation-for="Worker.Education" class="text-danger"></span>
                </div>
                <div class="form-group col-sm-6">
                    <label asp-for="Worker.MiddleName" class="control-label">По-батькові *</label>
                    <div class="form-inline">
                        <input asp-for="Worker.MiddleName" class="form-control col-10" />
                        <input type="reset" class="btn-light form-control col-1" value="X" />
                    </div>
                    <span asp-validation-for="Worker.MiddleName" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label asp-for="Worker.PositionId" class="control-label">Посада *</label>
                    <div class="form-inline">
                        <select asp-for="Worker.PositionId" class="form-control col-10" asp-items="ViewBag.PositionId"></select>
                        <input type="reset" class="btn-light form-control col-1" value="X" />
                    </div>
                    <span asp-validation-for="Worker.Education" class="text-danger"></span>
                </div>
                <div class="form-group col-sm-6">
                    <label asp-for="Worker.DateOfBirth" class="control-label">День народження *</label>
                    <div class="form-inline">
                        <input type="date" asp-for="Worker.DateOfBirth" class="form-control col-10" />
                        <input type="reset" class="btn-light form-control col-1" value="X" />
                    </div>
                    <span asp-validation-for="Worker.DateOfBirth" class="text-danger"></span>
                </div>
                <div class="form-group col-sm-6">
                    <label asp-for="Worker.DateOfEmployment" class="control-label">Дата прийому на роботу *</label>
                    <div class="form-inline">
                        <input type="date" asp-for="Worker.DateOfEmployment" class="form-control col-10" />
                        <input type="reset" class="btn-light form-control col-1" value="X" />
                    </div>
                    <span asp-validation-for="Worker.DateOfEmployment" class="text-danger"></span>
                </div>
                <div class="form-group col-12">
                    <label asp-for="Worker.Address" class="control-label">Адреса *</label>
                    <div class="form-inline">
                        <input asp-for="Worker.Address" class="form-control col-11" />
                        <input type="reset" class="btn-light form-control col-1" value="X" />
                    </div>
                    <span asp-validation-for="Worker.Address" class="text-danger"></span>
                </div>
                <div class="form-group col-12">
                    <input type="submit" value="Зберегти" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
