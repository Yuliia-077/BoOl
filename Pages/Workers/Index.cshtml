@page
@model BoOl.Pages.Workers.IndexModel

@{
    ViewData["Title"] = "Workers";
}

<div class="row">
    <div class="col-6 col-md-3">
        <div class="card border border-secondary text-center">
            <div class="card-header">
                Кількість 
                посад:
            </div>
            <p class="font-weight-bold" style="font-size:xx-large">@Model.CountOfPosition</p>
        </div>
    </div>
    <div class="col-6 col-md-4">
        <div class="card border border-secondary text-center">
            <div class="card-header">
                Кількість 
                співробітників:
            </div>
            <p class="font-weight-bold" style="font-size:xx-large">@Model.CountOfWorkers</p>
        </div>
    </div>
    <div class="col-6 col-md-5">
            <form class="card border border-secondary text-center">
                <div class="card-header">
                    Пошук по посаді
                </div>
                <div class="input-group mt-2 mb-3 justify-content-center">
                    <input type="text" class="form-check" asp-for="SearchPosition" aria-describedby="button-addon">
                    <button class="btn btn-outline-secondary" type="submit" id="button-addon">Шукати</button>
                </div>
            </form>
        </div>
    <div class="col-6 col-md-12">
        <div class="d-grid gap-2 d-flex justify-content-end">
            <a class="btn btn-secondary mt-1" asp-page="/Positions/Create"><i class="fas fa-plus"> Додати посаду</i></a>
        </div>
        <div class="d-grid gap-2 d-flex justify-content-end">
            <a class="btn btn-secondary mt-1" asp-page="./Create"><i class="fas fa-plus"> Додати співробітника</i></a>
        </div>
    </div>
</div>
<div class="row">
    @foreach (var position in Model.Positions)
    {
        <div class="col-md-6 mt-1">
        <div class="card border-dark">
            <div class="card-header">
                <h1>@position.Name</h1>
                <div class="d-grid gap-2 d-flex justify-content-end">
                    <a class="btn btn-outline-secondary" asp-page="/Positions/Edit" asp-route-id="@position.Id"><i class="far fa-edit"> Редагувати</i></a>
                    <a class="btn btn-outline-danger" asp-page="./Index" asp-page-handler="Delete" onclick="return confirm('Ви дійсно хочете видалити дану посаду?');" asp-route-id="@position.Id"><i class="far fa-trash-alt"> Видалити</i></a>
                </div>
            </div>
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                П.І.Б.
                            </th>
                            <th>
                                Номер телефону
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in position.Workers)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LastName) @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.MiddleName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                                </td>
                                <td>
                                    <a asp-page="./Details" asp-route-id="@item.Id"><i class="fas fa-info"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
     </div>
    }
</div>

