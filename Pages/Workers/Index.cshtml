@page
@model BoOl.Pages.Workers.IndexModel

@{
    ViewData["Title"] = "Workers";
}

<div class="row">
    <div class="col-11">
        <h1 class="text-center">Працівники</h1>
    </div>
    <div class="col-1">
        <a asp-page="Create"><i class="fas fa-plus"></i></a>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                Прізвище
            </th>
            <th>
               Ім'я
            </th>
            <th>
                Номер телефону
            </th>
            <th>
                Посада
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Worker) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position.Name)
            </td>
            <td>
                <a asp-page="./Details" asp-route-id="@item.Id"><i class="fas fa-info"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
